<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/upload_video_cancel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textColor="#B1B1B3"
                    android:padding="15dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/upload_video_upload_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:layout_alignParentRight="true"
                    android:textColor="#03CA0D"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="30dp"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <!--<ImageButton-->
            <!--android:id="@+id/upload_video_ib"-->
            <!--android:layout_width="129dp"-->
            <!--android:layout_height="129dp"-->
            <!--android:background="@drawable/icon_upload_video"-->
            <!--android:layout_marginTop="3dp"/>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upload_img_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/list_item_image" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upload_video_rv"
                android:layout_width="129dp"
                android:layout_height="129dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/upload_video_rv_item_image"
                android:layout_gravity="center_horizontal" />


            <EditText
                android:id="@+id/upload_video_content_edt"
                android:layout_width="match_parent"
                android:layout_height="144.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="我想说..."
                android:gravity="top"
                android:padding="10dp"
                android:textSize="14sp"
                android:background="@drawable/bg_edt_upload_video"/>

            <EditText
                android:id="@+id/upload_video_title_edt"
                android:layout_width="match_parent"
                android:layout_height="54.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="视频标题..."
                android:gravity="top"
                android:padding="10dp"
                android:textSize="14sp"
                android:background="@drawable/bg_edt_upload_video"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>