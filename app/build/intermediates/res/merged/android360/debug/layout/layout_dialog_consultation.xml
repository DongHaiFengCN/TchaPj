<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dialog_consultation"
    android:id="@+id/layout_dialog_consultation"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_consultation_ll_graphic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_consultation_graphic"/>

            <TextView
                android:id="@+id/dialog_consultation_tv_graphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ADACAC"
                android:text="图文"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_consultation_ll_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_consultation_video"/>

            <TextView
                android:id="@+id/dialog_consultation_tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ADACAC"
                android:text="小视频"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_consultation_ll_long_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_consultation_long_video"/>

            <TextView
                android:id="@+id/dialog_consultation_tv_long_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ADACAC"
                android:text="长视频"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_consultation_ll_reprint_graphic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_consultation_reprint_graphic"/>

            <TextView
                android:id="@+id/dialog_consultation_tv_reprint_graphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ADACAC"
                android:text="转载图文"/>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/dialog_consultation_fl_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="23dp">

        <ImageView
            android:id="@+id/dialog_consultation_iv_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_consultation_cancel"/>
    </FrameLayout>



</LinearLayout>