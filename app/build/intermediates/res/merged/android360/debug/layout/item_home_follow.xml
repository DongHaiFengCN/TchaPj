<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:id="@+id/follow_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_toobar6"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.wujingchao.android.view.SimpleTagImageView
                android:id="@+id/follow_iv_head"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_message_text_default" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_follow"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/follow_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="今日头条"
                android:textColor="@color/text_media"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <!--<ImageView
                    android:id="@+id/follow_imageView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:padding="4dp"
                    android:src="@mipmap/ic_blue_v" />-->

                <!--android:background="@drawable/blue_storke2"-->
                <TextView
                    android:id="@+id/follow_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:paddingBottom="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:singleLine="true"
                    android:text="线上推广"
                    android:textColor="@color/text_head_line"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/follow_imageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:padding="4dp"
                    android:src="@mipmap/ic_red_v2" />

                <!--<TextView
                    android:id="@+id/follow_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_storke2"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="线上推广"
                    android:textColor="@color/text_head_line"
                    android:textSize="10sp" />-->

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>