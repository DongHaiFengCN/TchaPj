<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xcskin="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">

        <RadioGroup
            android:id="@+id/main_top_rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/top_rg_a"
                android:layout_width="101.5dp"
                android:layout_height="30dp"
                android:background="@drawable/top_r_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="我发的任务"
                android:textColor="@drawable/top_r_text"
                android:textSize="14dp"/>

            <RadioButton
                android:id="@+id/top_rg_b"
                android:layout_width="101.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/top_r_bg2"
                android:button="@null"
                android:gravity="center"
                android:text="我领的任务"
                android:textColor="@drawable/top_r_text"
                android:textSize="14dp"/>
        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/task_square_ll_myfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/task_square_rl_myfa"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/task_square_rv_myfa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_square_ll_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:visibility="gone">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/task_square_rl_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/task_square_rv_my"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/add_task_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_add3"
        android:tag="发任务"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp" />


    <com.application.tchapj.task.wigiter.XCArcMenuView
        android:id="@+id/arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        xcskin:position="right_bottom"
        xcskin:radius="100dp"
        android:visibility="gone">

        <!--android:background="@mipmap/composer_button"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/task_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_add3"
                android:tag="发任务" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/task_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_dy_select"
            android:tag="抖音" />

        <ImageView
            android:id="@+id/task_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_py_select"
            android:tag="朋友圈" />

        <ImageView
            android:id="@+id/task_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_wb_select"
            android:tag="微博" />

        <ImageView
            android:id="@+id/task_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_qt"
            android:tag="其他" />

    </com.application.tchapj.task.wigiter.XCArcMenuView>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="23dp"
        android:hint="发任务"/>-->

</RelativeLayout>