        <TextView
            android:id="@+id/hf_tv2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="类型" />


        <TextView
            android:id="@+id/hf_tv3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="类型" />

    </LinearLayout>



</LinearLayout>
