<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="推广金提现"
            android:textColor="#7252FE"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="提出金额"
            android:textColor="#bb333333"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/layout_dialog_extension_amount_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_wallet_customize_edt"
            android:padding="10dp"
            android:hint=""
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="到账账号"
            android:textColor="#bb333333"
            android:layout_marginTop="30dp"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/layout_dialog_extension_bank_outlets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入开户行"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/layout_dialog_extension_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/layout_dialog_extension_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入到账银行卡号"
            android:inputType="number"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/layout_dialog_extension_confirm_tv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="申请提现"
            android:textColor="#FDFDFE"
            android:textSize="14dp"
            android:background="@drawable/subscribe_rule_channel_tag_pressed4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>