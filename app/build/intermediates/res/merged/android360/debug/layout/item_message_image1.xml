<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="小米手机在印度夺魁，雷军为何转成去现场见证？"
            android:textColor="@color/consultation_item_txt_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_message_text_default" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hot1"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_hot2"
                android:layout_marginRight="10dp" />

            <ImageView
                style="@style/consultation_name_tag"
                android:layout_gravity="center"
                android:src="@mipmap/ic_red_v2"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="央视新闻"
                android:textColor="@color/consultation_item_txt_color"
                android:textSize="12sp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-03-20"
                android:textColor="@color/consultation_item_dsc_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:text="删除"
                android:gravity="center"
                style="@style/consultation_info_adapter_delete_style"/>

        </LinearLayout>

    </LinearLayout>


    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colore6" />-->

</LinearLayout>

