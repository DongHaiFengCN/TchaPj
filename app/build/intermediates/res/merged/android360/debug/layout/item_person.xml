<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:id="@+id/item_person">


    <!--android:background="@drawable/white_radiu_bg"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="11.5dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp">

            <com.application.tchapj.utils2.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@mipmap/ic_media_head_default"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王乐乐"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginLeft="12dp"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/person_item_name_color"/>


            <ImageView
                android:id="@+id/ic_type"
                android:layout_width="11dp"
                android:layout_height="11.5dp"
                android:src="@mipmap/ic_red_v2"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_alignTop="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金种子创投基金合伙人"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_alignBottom="@+id/iv_head"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"
                android:maxEms="16"
                android:layout_marginBottom="4dp"
                android:textColor="@color/person_item_desc_color"/>

            <TextView
                android:id="@+id/zixunName"
                android:layout_width="wrap_content"
                android:layout_height="18.5dp"
                android:gravity="center_vertical"
                android:text="新闻"
                android:textSize="9sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_storke"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3.5dp"
                android:textColor="@color/tool_bar_right"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dotted_line_shap"
            android:layerType="software"
            />

        <com.application.tchapj.utils2.FlowGroupView
            android:id="@+id/flow_view_group"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout"
            zhy:max_select="-1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="9dp">
        </com.zhy.view.flowlayout.TagFlowLayout>

    </LinearLayout>

</LinearLayout>

