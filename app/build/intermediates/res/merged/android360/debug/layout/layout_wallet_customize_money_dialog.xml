<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/zdy_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="大额兑换"
            android:textColor="#7252FE"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="V币兑换"
            android:textColor="#bb333333"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/layout_dialog_wallet_amount_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_wallet_customize_edt"
            android:padding="10dp"
            android:hint="最少5000"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/layout_dialog_wallet_amount_actual"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text=""
                android:textColor="#bb333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/zdy_gs_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="  （0.1*V币数*0.8）"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:textColor="#ee333333"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/layout_dialog_wallet_bank_outlets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入开户行"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/layout_dialog_wallet_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/layout_dialog_wallet_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入到账银行卡号"
            android:inputType="number"
            android:background="@drawable/layout_wallet_customize_edt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注：因采用公用账户打款，按照相关国家规定扣除20%交易税"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/layout_dialog_wallet_confirm_tv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="兑换"
            android:textColor="#FDFDFE"
            android:textSize="14dp"
            android:background="@drawable/subscribe_rule_channel_tag_pressed4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>