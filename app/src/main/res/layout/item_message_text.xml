<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="121.5dp"
            android:layout_height="83dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_message_text_default" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="11.5dp"
            android:layout_toLeftOf="@+id/iv_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="小米手机在印度夺魁，雷军为何转成去现场见证？"
            android:textColor="@color/consultation_item_txt_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_toLeftOf="@+id/iv_image"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_hot2" />

            <ImageView
                style="@style/consultation_name_tag"
                android:layout_gravity="center"
                android:src="@mipmap/ic_red_v2"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="10"
                android:singleLine="true"
                android:text="央视新闻"
                android:textColor="@color/consultation_item_txt_color"
                android:textSize="12sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2018-03-20"
                android:textColor="@color/consultation_item_dsc_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:text="删除"
                android:gravity="center"
                style="@style/consultation_info_adapter_delete_style"/>

        </LinearLayout>

    </RelativeLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colore6" />-->

</LinearLayout>

