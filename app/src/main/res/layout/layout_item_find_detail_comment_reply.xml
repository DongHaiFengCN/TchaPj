<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4F8FB"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="17dp">

    <LinearLayout
        android:id="@+id/find_detail_comment_reply_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="19dp"
        android:paddingTop="20dp">

        <com.application.tchapj.utils2.CircleImageView
            android:id="@+id/find_detail_comment_reply_civ"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/ic_media_head_default"
            android:layout_marginRight="7dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/find_detail_comment_reply_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff9296ab"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="6dp"
                    />

                <TextView
                    android:id="@+id/find_detail_comment_reply_author_tag_tv"
                    android:layout_width="36dp"
                    android:layout_height="15dp"
                    android:text="作者"
                    android:textColor="#AB8CFE"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/bg_find_detail_comment"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/find_detail_comment_reply_name_tv"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/find_detail_comment_reply_like_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/find_detail_comment_reply_like_iv"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:textColor="#ff9296ab"
                        android:textSize="15sp"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/find_detail_comment_reply_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff9296ab"
                        android:textSize="15dp"/>
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/find_detail_comment_reply_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff0d143c"
                android:textSize="14sp"
                android:paddingBottom="15dp"
                />

        </LinearLayout>
    </LinearLayout>



    </LinearLayout>



</LinearLayout>