<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    android:background="@drawable/bg_dialog_consultation"
    android:id="@+id/layout_dialog_consultation"
    android:visibility="visible">

    <TextView
        android:id="@+id/close_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="x"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:text="支付订单"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="¥9999"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bottom_navigation_elevation"
        android:gravity="center"
        android:textSize="15sp"
        android:text="选择支付方式"
        android:textColor="@color/black" />

    <RadioGroup
        android:id="@+id/pay_type_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/bottom_navigation_elevation"
        >

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:typeface="normal" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dimgray"
            android:layout_margin="@dimen/bottom_navigation_elevation"
            />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=" 支付宝"
            android:textSize="18sp"
            android:typeface="normal" />
    </RadioGroup>

    <Button
        android:id="@+id/pay_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认支付"
        android:background="@drawable/bg_dialog_my_money_recharge_submit"
        android:textColor="@color/white"
        android:layout_margin="18dp"
        android:gravity="center"
        />
</LinearLayout>