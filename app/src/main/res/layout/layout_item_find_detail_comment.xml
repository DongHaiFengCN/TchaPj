<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/find_detail_comment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="19dp"
        android:paddingTop="20dp">

        <com.application.tchapj.utils2.CircleImageView
            android:id="@+id/find_detail_comment_civ"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/ic_media_head_default"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/find_detail_comment_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff9296ab"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="7dp"
                    />

                <TextView
                    android:id="@+id/find_detail_comment_name_tag_tv"
                    android:layout_width="36dp"
                    android:layout_height="15dp"
                    android:text="作者"
                    android:textColor="#AB8CFE"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/bg_find_detail_comment"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/find_detail_comment_name_tv"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/find_detail_comment_like_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    >

                    <ImageView
                        android:id="@+id/find_detail_comment_like_iv"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:textColor="#ff9296ab"
                        android:textSize="15sp"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/find_detail_comment_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff9296ab"
                        android:textSize="15dp"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/find_detail_comment_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff0d143c"
                android:textSize="15sp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_detail_comment_reply_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:visibility="gone"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/find_detail_comment_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#9296AB"
            android:text=""/>

        <TextView
            android:id="@+id/find_detail_comment_comment_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=""
            android:textSize="13dp"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:alpha="0.7"
            android:paddingTop="3.5dp"
            android:paddingBottom="3.5dp"
            android:background="@drawable/bg_gray_find_detail_comment_count"
            android:visibility="gone"/>

    </LinearLayout>


    <View
        android:id="@+id/find_detail_comment_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6"
        android:layout_marginTop="6dp"
        />

</LinearLayout>