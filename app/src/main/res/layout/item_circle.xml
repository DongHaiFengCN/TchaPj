<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_circle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <!--android:background="@drawable/white_radiu_bg"-->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_radiu_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.application.tchapj.utils2.CircleImageView
                android:id="@+id/circle_iv_head"
                android:layout_width="72.5dp"
                android:layout_height="72.5dp"
                android:src="@mipmap/ic_media_head_default"
                android:layout_marginRight="18dp"/>

            <TextView
                android:id="@+id/circle_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circle_iv_head"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/circle_iv_head"
                android:text="王乐乐"
                android:textColor="#293056"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/circle_ic_type"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/circle_tv_name"
                android:layout_alignTop="@+id/circle_tv_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/circle_tv_name"
                android:src="@mipmap/ic_nv" />

            <ImageView
                android:id="@+id/circle_ic_type2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/circle_tv_name"
                android:layout_alignTop="@+id/circle_tv_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/circle_tv_name"
                android:src="@mipmap/iv_nan" />

            <TextView
                android:id="@+id/circle_tv_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_toRightOf="@+id/circle_iv_head"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="金种子创投基金合伙人"
                android:textColor="#9296AB"
                android:textSize="13sp" />

            <LinearLayout

                android:id="@+id/circle_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/circle_iv_head"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="51dp">


                <ImageView
                    android:id="@+id/py_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/circle_rl"
                    android:src="@mipmap/ic_py_select_normal" />

                <ImageView
                    android:id="@+id/wb_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/circle_rl"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_vb" />

                <ImageView
                    android:id="@+id/tencent_video"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_tencent_video" />


                <ImageView
                    android:id="@+id/dy_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/circle_rl"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_dy" />

                <ImageView
                    android:id="@+id/other_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/circle_rl"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_other" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginTop="55dp"
                android:text="济南"
                android:textSize="12sp"
                android:textColor="#9296AB"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/subscribe_rule_channel_tag_pressed3"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

