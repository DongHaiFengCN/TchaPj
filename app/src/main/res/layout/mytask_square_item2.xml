<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_ll_my2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/task_tob_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/taskitemimg" />

        <TextView
            android:id="@+id/task_tob_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="北海烤鱼"
            android:textColor="@color/room_lable_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_tob_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="倒计时：sss小时"
            android:src="@drawable/ic_next" />

    </LinearLayout>

    <include layout="@layout/line_h" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/line_bg"
        android:gravity="center"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img1"
            android:layout_width="5dp"
            android:layout_height="80dp"
           android:background="@drawable/itemline2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/task_content_iv"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bj" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/task_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="今日头条"
                android:textColor="@color/text_media"
                android:textSize="15dp" />

            <LinearLayout

                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:ellipsize="end"
                android:orientation="horizontal">

                <com.application.tchapj.utils2.CircleImageView
                    android:id="@+id/task_content_vip"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:padding="4dp"
                     />

                <TextView
                    android:id="@+id/task_content_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="线上推广hahahah"
                    android:textColor="@color/text_head_line"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/task_content_tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_center_shap"
                   android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:text="合拍"
                    android:textSize="12dp"
                    android:visibility="visible"/>

            </LinearLayout>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/task_content_frequency"
                android:layout_alignBottom="@+id/task_content_frequency"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/task_content_frequency"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:text="¥"
                android:textColor="@color/tab_text_color_selected"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/task_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="5/次"
                android:textColor="@color/tab_text_color_selected"
                android:textSize="16dp" />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/line_h" />

</LinearLayout>