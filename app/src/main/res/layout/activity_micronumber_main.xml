<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clipToPadding="true"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/micro_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/micro_celebrity_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="名人"
                android:textSize="14sp"
                android:textColor="@drawable/top_r_text2"
                android:textColorHighlight="#48BAF3"/>


            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/radiobutton_background3" />

            <RadioButton
                android:id="@+id/micro_media_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="媒体"
                android:textColor="@drawable/top_r_text2"
                android:textColorHighlight="#48BAF3"
                android:textSize="14sp" />

        </RadioGroup>

    </RelativeLayout>

    <include layout="@layout/line_h" />

    <FrameLayout
        android:id="@+id/micro_number_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1" />

</LinearLayout>
