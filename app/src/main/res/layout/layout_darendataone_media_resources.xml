<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <com.application.tchapj.widiget.MustWriteLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        app:title_tv="选择您的媒体资源"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="23dp"
        android:textSize="14sp" />


    <com.application.tchapj.widiget.FlowTagLayout
        android:id="@+id/darendataone_media_resources_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-10dp"
        />


    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.application.tchapj.widiget.MustWriteLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                app:title_tv="上传朋友圈页面截图"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/darendataone_media_resources_example_tv"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:text="截图示例"
                android:gravity="center"
                android:textColor="#4FA8FB"
                android:textSize="13sp"
                android:background="@drawable/bg_darendataone_media_example"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_radiu_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/darendataone_media_resources_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/layout_item_upload_img"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:id="@+id/darendataone_media_resources_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请上传微信-通讯录截图，会公开展示到圈子名片中"
                android:textColor="#FE4D40"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:paddingBottom="20dp"/>
        </LinearLayout>




    </LinearLayout>
    
    
    
    
</LinearLayout>