<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/orginalstateLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/release_state_line" />

    <ImageView
        android:id="@+id/releasefStateOn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/orginalstateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orginalstateLine"
        app:srcCompat="@drawable/release_state_on1" />

    <ImageView
        android:id="@+id/releasefStateOff4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/orginalstateLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orginalstateLine"
        app:srcCompat="@drawable/release_state_off_3" />

    <ImageView
        android:id="@+id/releasefStateOff2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/orginalstateLine"
        app:layout_constraintEnd_toStartOf="@+id/releasefStateOff4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/releasefStateOn1"
        app:layout_constraintTop_toTopOf="@+id/orginalstateLine"
        app:srcCompat="@drawable/release_state_off2" />


    <TextView
        android:id="@+id/releasefTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/hair_circle_of_douyinoriginal"
        android:textColor="@color/color_FEB06B"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/releasefStateOn1"
        app:layout_constraintStart_toStartOf="@+id/releasefStateOn1"
        app:layout_constraintTop_toBottomOf="@+id/releasefStateOn1" />

    <TextView
        android:id="@+id/originalfTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/contact_cooperation"
        android:textColor="@color/gainsboro"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/releasefStateOff2"
        app:layout_constraintStart_toStartOf="@+id/releasefStateOff2"
        app:layout_constraintTop_toBottomOf="@+id/releasefStateOff2" />


    <TextView
        android:id="@+id/originalfTv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/cooperated"
        android:textColor="@color/gainsboro"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/releasefStateOff4"
        app:layout_constraintStart_toStartOf="@+id/releasefStateOff4"
        app:layout_constraintTop_toBottomOf="@+id/releasefStateOff4" />

    <ImageView
        android:id="@+id/releasefBg"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/originalfTv2"
        app:srcCompat="@color/color_F3F3F3" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/releasefBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/originalimg"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="15dp"
                    android:src="@color/gainsboro" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/releasefNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/friendCircleImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/friend_circle"
                            app:layout_constraintBottom_toBottomOf="@+id/originalimg"
                            app:layout_constraintStart_toEndOf="@+id/originalimg" />

                        <TextView
                            android:id="@+id/friendCircleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="15dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_9296AB"
                            android:textSize="13dp"
                            app:layout_constraintBottom_toBottomOf="@+id/friendCircleImg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/friendCircleImg"
                            app:layout_constraintTop_toTopOf="@+id/friendCircleImg" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/activityTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/activity_countdown"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@+id/originalimg"
                    app:layout_constraintTop_toBottomOf="@+id/originalimg" />

                <TextView
                    android:id="@+id/activityTimeValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/color_9296AB"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="@+id/activityTimeTv"
                    app:layout_constraintTop_toBottomOf="@+id/activityTimeTv" />

                <ImageView
                    android:id="@+id/releasefBg1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activityTimeValueTv"
                    app:srcCompat="@drawable/dotted_line" />


                <!--<TextView-->
                    <!--android:id="@+id/releasefCrowdValueTv1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="15dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:text="TextView"-->
                    <!--android:textColor="@color/color_9296AB"-->
                    <!--android:textSize="13dp"-->
                    <!--android:visibility="gone"-->
                    <!--app:layout_constraintStart_toStartOf="parent"-->
                    <!--app:layout_constraintTop_toBottomOf="@+id/releasefCrowdTv" />-->

                <!--<TextView-->
                    <!--android:id="@+id/releasefCrowdValueTv2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="15dp"-->
                    <!--android:text=""-->
                    <!--android:textColor="@color/color_9296AB"-->
                    <!--android:textSize="13dp"-->
                    <!--app:layout_constraintBottom_toBottomOf="@+id/releasefCrowdValueTv1"-->
                    <!--app:layout_constraintStart_toEndOf="@+id/releasefCrowdValueTv1"-->
                    <!--app:layout_constraintTop_toTopOf="@+id/releasefCrowdValueTv1" />-->




                <TextView
                    android:id="@+id/releasefActivitysReTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="视频要求"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/releasefBg4" />

                <TextView
                    android:id="@+id/releasefActivitysReValueTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/color_9296AB"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/releasefActivitysReTv" />

                <ImageView
                    android:id="@+id/releasefBg5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/releasefMapTv"
                    app:srcCompat="@drawable/dotted_line" />

                <TextView
                    android:id="@+id/releasefBountyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/the_bounty"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/releasefBg5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/releasefMoneyImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_red_v3"
                        app:layout_constraintTop_toBottomOf="@+id/releasefBountyTv" />

                    <TextView
                        android:id="@+id/releasefMoneyValueTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_FF5E5E"
                        android:textSize="13dp"
                        app:layout_constraintBottom_toBottomOf="@+id/releasefMoneyImg"
                        app:layout_constraintLeft_toRightOf="@+id/releasefMoneyImg"
                        app:layout_constraintTop_toTopOf="@id/releasefMoneyImg" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/hairFriendsBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_gradient1"
                android:text="@string/hair_circle_of_douyinoriginal"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/releasefBg7" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>