                android:src="@mipmap/ic_media_head_default"/>

            <TextView
                android:id="@+id/search_tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/search_iv_head2"
                android:layout_alignTop="@+id/search_iv_head2"
                android:layout_marginLeft="11dp"
