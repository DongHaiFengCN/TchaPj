<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_radiu_bg">

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_radiu_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.application.tchapj.utils2.CircleImageView
                android:id="@+id/search_iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_media_head_default"/>

            <TextView
                android:id="@+id/search_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344"
                android:layout_toRightOf="@+id/search_iv_head"
                android:layout_alignTop="@+id/search_iv_head"
                android:layout_marginLeft="11dp"
                android:textSize="15sp"
                android:textColor="@color/color34"/>


            <ImageView
                android:id="@+id/search_ic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_red_v2"
                android:layout_toRightOf="@+id/search_tv_name"
                android:layout_marginLeft="6dp"
                android:layout_alignBottom="@+id/search_tv_name"
                android:layout_alignTop="@+id/search_tv_name" />

            <TextView
                android:id="@+id/search_tv_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/search_iv_head"
                android:layout_alignBottom="@+id/search_iv_head"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="11dp"
                android:textSize="13sp"
                android:maxEms="16"
                android:textColor="@color/color34"/>

            <TextView
                android:id="@+id/search_zixunName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_storke"
                android:layout_above="@+id/search_tv_explain"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/tool_bar_right"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/main_bag"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_ll2"
